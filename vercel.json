{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php",
      "config": {
        "maxLambdaSize": "25mb",
        "runtime": "php-8.1"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_KEY": "base64:mhyMGpPY1FdjI3uEz5LTaY99Wbm59uNittbc4iqJ0jw=",
    "DB_CONNECTION": "@db_connection",
    "DB_HOST": "@db_host",
    "DB_PORT": "@db_port",
    "DB_DATABASE": "@db_database",
    "DB_USERNAME": "@db_username",
    "DB_PASSWORD": "@db_password",
    "CACHE_DRIVER": "file",
    "SESSION_DRIVER": "file",
    "QUEUE_DRIVER": "sync"
  }
}
